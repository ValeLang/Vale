func exists<E, F>(list &List<E>, func F) bool
where T Ref, Prot["__call", Refs(&F, E), T] {
  i = 0;
  while i < list.len() {
    if (&func)(list.get(i)) {
      return true;
    }
    set i = i + 1;
  }
  return false;
}
