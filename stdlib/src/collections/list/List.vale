func each<E, F>(list &List<E>, func F) void
where
    F Ref(_, rw, _),
    Prot("__call", Refs(&!F, &E), void) {
  i = 0;
  l = len(&list);
  while i < l {
    func!(&list.get(i));
    set i = i + 1;
  }
}

func each<E, F>(list &List<E>, func F) void
where
    F Ref(_, ro, _),
    Prot("__call", Refs(&F, &E), void) {
  i = 0;
  l = len(&list);
  while i < l {
    func(&list.get(i));
    set i = i + 1;
  }
}

func each<E, F>(list &!List<E>, func F) void
where
    F Ref(_, rw, _),
    Prot("__call", Refs(&!F, &!E), void) {
  i = 0;
  l = len(&list);
  while i < l {
    func!(list!.get(i));
    set i = i + 1;
  }
}

func each<E, F>(list &!List<E>, func F) void
where
    F Ref(_, ro, _),
    Prot("__call", Refs(&F, &!E), void) {
  i = 0;
  l = len(&list);
  while i < l {
    func(list!.get(i));
    set i = i + 1;
  }
}

