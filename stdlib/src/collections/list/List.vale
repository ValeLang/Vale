struct ListBuilder<T> {
  list! List<T>;
}
func ListBuilder<T>() ListBuilder<T> {
  ListBuilder<T>(List<T>())
}
func add<T>(self ListBuilder<T>, newElement T) ListBuilder<T> {
  self.list!.add(newElement);
  ret self;
}
func build<T>(self ListBuilder<T>) List<T> {
  [list] = self;
  ret list;
}

